generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  role      Role     @default(USER)
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profile Profile?

  @@map("users")
}

model Profile {
  id          String    @id @default(uuid()) @db.Uuid
  userId      String    @unique @map("user_id") @db.Uuid
  user        User      @relation(fields: [userId], references: [id])
  avatar      String?   @unique @db.Uuid
  phoneNumber BigInt?   @map("phone_number")
  patronymic  String?
  birthday    DateTime?
  // subscriptions String[]
  // savedEvents   String[]       @map("saved_events")

  saverProfiles   ProfilePeople[] @relation("saverProfiles") // кто сохранил к себе профили
  savedByProfiles ProfilePeople[] @relation("savedByProfiles") // тот кто был сохранён другими профилями
  form            Form?

  @@map("profiles")
}

model ProfilePeople {
  id          String       @id @default(uuid()) @db.Uuid
  userId      String       @map("user_id") @db.Uuid
  savedUserId String       @map("saved_user_id") @db.Uuid
  status      PeopleStatus

  saver Profile @relation("saverProfiles", fields: [userId], references: [userId]) // профиль-инициатор сохранения других пользователей
  saved Profile @relation("savedByProfiles", fields: [savedUserId], references: [userId]) // сохранённый профиль другими пользователями

  @@unique([userId, savedUserId], name: "userIdSavedUserId")
  @@map("profiles-people")
}

model Form {
  id           String       @id @default(uuid()) @db.Uuid
  userId       String       @unique @map("user_id") @db.Uuid
  age          Int
  gender       PeopleGender
  favoriteTime Json[]       @map("favorite_time")
  address      Json?
  about        String?
  institute    String?
  course       Int?
  direction    String?
  profession   String?
  freezeAt     DateTime?    @map("freeze_at")
  blockedAt    DateTime?    @map("blocked_at")

  profile   Profile        @relation(fields: [userId], references: [userId])
  interests FormInterest[] @relation("formInterests")
  topics    FormTopic[]    @relation("formTopics")
  games     FormGame[]     @relation("formGames")

  @@map("forms")
}

model FormInterest {
  id          String @id @default(uuid()) @db.Uuid
  userId      String @map("user_id") @db.Uuid
  interestId  String @map("interest_id") @db.Uuid

  form     Form     @relation("formInterests", fields: [userId], references: [userId])
  interest Interest @relation("interestForms", fields: [interestId], references: [id])

  @@unique([userId, interestId], name: "userIdInterestId")
  @@map("forms-interests")
}

model FormTopic {
  id      String @id @default(uuid()) @db.Uuid
  userId  String @map("user_id") @db.Uuid
  topicId String @map("topic_id") @db.Uuid

  form  Form  @relation("formTopics", fields: [userId], references: [userId])
  topic Topic @relation("topicForms", fields: [topicId], references: [id])

  @@unique([userId, topicId], name: "userIdTopicId")
  @@map("forms-topics")
}

model FormGame {
  id     String @id @default(uuid()) @db.Uuid
  userId String @map("user_id") @db.Uuid
  gameId String @map("topic_id") @db.Uuid

  form Form @relation("formGames", fields: [userId], references: [userId])
  game Game @relation("gameForms", fields: [gameId], references: [id])

  @@unique([userId, gameId], name: "userIdGameId")
  @@map("forms-games")
}

model Interest {
  id    String @id @default(uuid()) @db.Uuid
  title String
  area  String

  forms FormInterest[] @relation("interestForms")

  @@map("interests")
}

model Topic {
  id          String  @id @default(uuid()) @db.Uuid
  title       String
  description String?

  games Game[]
  forms FormTopic[] @relation("topicForms")

  @@map("topics")
}

model Game {
  id                 String  @id @default(uuid()) @db.Uuid
  topicId            String  @map("topic_id") @db.Uuid
  title              String
  description        String?
  numberParticipants Int
  age                Int

  topic Topic      @relation(fields: [topicId], references: [id])
  forms FormGame[] @relation("gameForms")

  @@map("games")
}

model File {
  id        String    @id @default(uuid()) @db.Uuid
  modelId   String    @map("model_id") @db.Uuid
  modelType ModelType @map("model_type")
  fileName  String    @map("file_name")
  fileLink  String    @map("file_link")

  @@map("files")
}

enum Role {
  USER
  MANAGER
  ADMIN
}

enum PeopleStatus {
  SAVED
  FRIEND
}

enum PeopleGender {
  MALE
  FEMALE
}

enum ModelType {
  AVATAR
  FORM // protect
  COMMUNITY
  EVENT
  CHAT // protect
  MESSAGE // protect
  FEEDBACK
}
